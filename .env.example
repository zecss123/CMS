# CMS振动分析系统 - 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ==================== LLM配置 ====================
# OpenAI配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# DeepSeek配置
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# 本地模型配置
LOCAL_MODEL_PATH=/root/autodl-tmp/models/deepseek-7b
LOCAL_MODEL_DEVICE=auto

# ==================== 数据库配置 ====================
# PostgreSQL配置（生产环境）
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cms_vibration
POSTGRES_USER=cms_user
POSTGRES_PASSWORD=your-secure-password

# SQLite配置（开发环境）
SQLITE_PATH=./data/cms_data.db

# ==================== 外部API配置 ====================
# CMS系统API
CMS_API_BASE_URL=https://api.cms-system.com
CMS_API_KEY=your-cms-api-key
CMS_API_TIMEOUT=30

# 数据源API
DATA_SOURCE_BASE_URL=https://api.windfarm-data.com
DATA_SOURCE_API_KEY=your-data-api-key

# ==================== 系统配置 ====================
# 项目路径
PROJECT_ROOT=./
DATA_DIR=./data
OUTPUT_DIR=./output
LOG_DIR=./logs

# 缓存配置
CACHE_TYPE=memory
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== 安全配置 ====================
# 加密密钥
ENCRYPTION_KEY=your-encryption-key-here

# 访问控制
ALLOWED_IPS=127.0.0.1,localhost
RATE_LIMIT=100

# ==================== 应用配置 ====================
# Streamlit配置
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# 调试模式
DEBUG=false
USE_MOCK_DATA=false

# 日志级别
LOG_LEVEL=INFO